{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
      "env.d.ts",
      "src/**/*",
      "src/**/*.vue",
      "vue-i18n.d.ts"
    ],
  
  "compilerOptions": {
    "ignoreDeprecations": "5.0",
    "isolatedModules": true,
    "preserveValueImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
  },

  "references": [
    {
      "path": "./tsconfig.vite-config.json"
    }
  ]
}
